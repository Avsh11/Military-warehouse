<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" styleClass="anchorPane" stylesheets="@../../css/user/BuyPanel.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.warehouse.controller.user.BuyController">
   <children>
      <VBox alignment="CENTER" spacing="12.0" styleClass="mainPanel" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <ImageView fx:id="productImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" styleClass="productImage" />
            <Label styleClass="nameLabel" text="Product name:" />
            <Label fx:id="buyNameLabel" styleClass="productNameLabel" text="" />
            <Label styleClass="priceLabel" text="Price per unit:" />
            <Label fx:id="buyPriceLabel" styleClass="productPriceLabel" text="" />
            <Label styleClass="stockLabel" text="Number in stock:" />
            <Label fx:id="buyStockLabel" styleClass="productStockLabel" text="" />
            <TextField fx:id="buyField" maxWidth="200.0" styleClass="buyField" />
            <Label styleClass="finalPriceLabel" text="Final price:" />
            <Label fx:id="finalPriceLabel" styleClass="productFinalPriceLabel" text="" />
            <Button fx:id="buyButton" mnemonicParsing="false" onAction="#handleBuyButtonClick" styleClass="buyButton" text="BUY" />
            <Button fx:id="previousPageButton" mnemonicParsing="false" onAction="#handlePreviousPanelClick" styleClass="previousPageButton" text="PREVIOUS PAGE" />
         </children>
      </VBox>
   </children>
</AnchorPane>
