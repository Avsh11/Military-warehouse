<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.warehouse.controller.user.ProductController">
   <children>
      <VBox alignment="CENTER" spacing="20.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
         <children>
            <HBox spacing="40.0" alignment="CENTER">
               <VBox spacing="5.0" alignment="TOP_CENTER">
                  <children>
                     <ImageView fx:id="p1imageImage" fitHeight="150.0" fitWidth="200.0" preserveRatio="true"/>
                     <Label fx:id="p1nameLabel" text="Name"/>
                     <Label fx:id="p1descLabel" text="Description"/>
                     <Label fx:id="p1priceLabel" text="Price"/>
                     <Label fx:id="p1stockLabel" text="Stock"/>
                     <Button fx:id="p1buyButton" text="BUY" onAction="#handleBuyP1Click"/>
                  </children>
               </VBox>
               <VBox spacing="5.0" alignment="TOP_CENTER">
                  <children>
                     <ImageView fx:id="p2imageImage" fitHeight="150.0" fitWidth="200.0" preserveRatio="true"/>
                     <Label fx:id="p2nameLabel" text="Name"/>
                     <Label fx:id="p2descLabel" text="Description"/>
                     <Label fx:id="p2priceLabel" text="Price"/>
                     <Label fx:id="p2stockLabel" text="Stock"/>
                     <Button fx:id="p2buyButton" text="BUY" onAction="#handleBuyP2Click"/>
                  </children>
               </VBox>
            </HBox>
            <Button fx:id="previousPageButton" text="PREVIOUS PAGE" onAction="#handlePreviousPanelClick" />
         </children>
      </VBox>
   </children>
</AnchorPane>